{
  "compilerOptions": {                             
    "outDir": "./dist",                                 
    "removeComments": true,
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,     
    "experimentalDecorators": true,     
    "emitDecoratorMetadata": true,
    "strict": true,                                                   
    "skipLibCheck": true,
    "moduleResolution": "node",   
    "target": "esnext",
    "module": "commonjs",                         
  }
}